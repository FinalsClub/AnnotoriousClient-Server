.side
  float: left

  box-shadow: 0 0 8px rgba(0,0,0,0.5)
  border-bottom-right-radius: 6px

  a
    display: block
    padding: 10px

    border-bottom: 1px solid rgba(0,0,0,0.25)

    background: linear-gradient(top, $side_bg[0] 0%, $side_bg[1] 100%)

    color: rgb(70, 70, 70)
    text-decoration: none
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5)

    &:hover
      background: linear-gradient(top, $side_bg_hover[0] 0%, $side_bg_hover[1] 100%)

    &:last-child
      border-bottom-width: 0

      border-bottom-right-radius: 5px

    &.selected
      background: linear-gradient(top, $side_bg_selected[0] 0%, $side_bg_selected[1] 100%)
